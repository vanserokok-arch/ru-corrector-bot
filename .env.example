# Application Configuration
APP_NAME=ru-corrector
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Text Processing
MAX_TEXT_LEN=15000

# Logging
LOG_LEVEL=INFO

# LanguageTool Configuration
# Use local server: http://localhost:8010
# Or public API: https://api.languagetool.org
LT_URL=http://lt-server:8010

# Correction Options
# Enable Ñ‘ replacement in corrections (default: false)
ENABLE_YO_REPLACEMENT=false

# Telegram Bot (Optional)
# TG_BOT_TOKEN=your_telegram_bot_token_here
# DEFAULT_MODE=legal

# Legacy support (use TG_BOT_TOKEN instead)
# BOT_TOKEN=your_telegram_bot_token_here
