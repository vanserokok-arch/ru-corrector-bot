# Application Configuration
APP_NAME=ru-corrector
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Text Processing
MAX_TEXT_LEN=15000

# Logging
LOG_LEVEL=INFO

# LanguageTool Configuration
# Use public API (recommended for Mac/local development)
LT_URL=https://api.languagetool.org
LT_LANGUAGE=ru-RU

# Correction Options
# Enable Ñ‘ replacement in corrections (default: false)
ENABLE_YO_REPLACEMENT=false

# Telegram Bot Configuration
# Get your token from @BotFather
BOT_TOKEN=
DEFAULT_MODE=min

# Legacy support (TG_BOT_TOKEN is the same as BOT_TOKEN)
# TG_BOT_TOKEN=your_telegram_bot_token_here
