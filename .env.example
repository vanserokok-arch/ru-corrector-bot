# Application Configuration
APP_NAME=ru-corrector
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Text Processing
MAX_TEXT_LEN=15000

# Logging
LOG_LEVEL=INFO

# LanguageTool Configuration (optional, fallback)
# Use public API (recommended for Mac/local development)
LT_URL=https://api.languagetool.org
LT_LANGUAGE=ru-RU

# Correction Options
# Enable Ñ‘ replacement in corrections (default: false)
ENABLE_YO_REPLACEMENT=false

# Telegram Bot Configuration
# Get your token from @BotFather
BOT_TOKEN=

# Default correction mode (min, biz, acad, typo)
DEFAULT_MODE=min

# OpenAI Configuration
# Required for voice transcription and advanced text correction
OPENAI_API_KEY=

# OpenAI model for text correction (gpt-4o-mini is cost-effective)
OPENAI_TEXT_MODEL=gpt-4o-mini

# OpenAI model for voice transcription
OPENAI_TRANSCRIBE_MODEL=whisper-1

# OpenAI API timeout in seconds
OPENAI_TIMEOUT_SECONDS=60
